{
  "name": "is-valid-host",
  "version": "1.0.1",
  "description": "Validates if string is a valid host based on RFC-7230.",
  "main": "index.js",
  "types": "types/index.d.ts",
  "scripts": {
    "test": "tape test/*.js",
    "build:example": "browserify example/main.js -o example/dist/bundle.js",
    "lint": "standard --fix index.js test/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/miguelmota/is-valid-host"
  },
  "keywords": [
    "valid",
    "validate",
    "validator",
    "check",
    "checker",
    "domain",
    "subdomain",
    "wildcard",
    "hostname",
    "host",
    "rfc7239",
    "rfc1123",
    "rfc3696",
    "rfc952",
    "rfc1034",
    "rfc1738",
    "rfc4697"
  ],
  "author": {
    "name": "Miguel Mota",
    "email": "hello@miguelmota.com",
    "url": "https://miguelmota.com/"
  },
  "license": {
    "type": "MIT",
    "url": "https://github.com/miguelmota/is-valid-host/blob/master/LICENSE"
  },
  "bugs": {
    "url": "https://github.com/miguelmota/is-valid-host/issues"
  },
  "homepage": "https://github.com/miguelmota/is-valid-host",
  "devDependencies": {
    "browserify": "^16.2.3",
    "standard": "^16.0.3",
    "tape": "^4.9.2"
  },
  "testling": {
    "files": "test/*.js",
    "browsers": [
      "ie/6..latest",
      "chrome/22..latest",
      "firefox/16..latest",
      "safari/latest",
      "opera/11.0..latest",
      "iphone/6",
      "ipad/6",
      "android-browser/latest"
    ]
  }
}
